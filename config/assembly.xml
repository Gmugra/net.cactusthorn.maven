<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
	<id>${target.environment}</id><!-- will be end part of target file name -->
	<formats>
		<format>zip</format>
	</formats>
	<baseDirectory>/</baseDirectory>
	<fileSets>
		<fileSet>
			<directory>${project.build.directory}/${target.environment}</directory>
			<includes>
				<include>**/*.sh</include>
				<include>**/*.properties</include>
				<include>**/*.json</include>
				<include>**/*.xml</include>
				<include>**/*.config</include>
				<include>.</include>
			</includes>
			<filtered>true</filtered>
			<outputDirectory>./</outputDirectory>
		</fileSet>

		<fileSet>
			<outputDirectory>./subfolder/one</outputDirectory>
			<excludes>
				<exclude>**/*</exclude>
			</excludes>
		</fileSet>

		<fileSet>
			<outputDirectory>./subfolder/two</outputDirectory>
			<excludes>
				<exclude>**/*</exclude>
			</excludes>
		</fileSet>

	</fileSets>
</assembly>